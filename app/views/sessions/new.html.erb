<% flash.each do |type, message| %>
  <div class="alert alert<%= type %>"><%= message %></div>
<% end %>


<h2>Log in</h2>

    <div class="col-md-6 col-md-offset-3">
        <%= form_tag url_for(action: 'create'), method: 'post' do %>
          <%= label_tag 'Ton email' %>
          <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'exemple@mail.com' %>
          <br>
          <%= label_tag 'Ton mot de passe' %>
          <%= password_field_tag 'password', nil,  class: 'form-control' %>
          <br><br>
          <%= submit_tag 'Connecte-toi', class: "btn btn-info" %>
        <% end %>
        <br>
        <p>New user? <%= link_to "Sâ€™enregistrer", signup_path %></p>
    </div>
